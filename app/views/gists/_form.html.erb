<%= form_for @gist, html: {class: "form-horizontal"} do |f| %>
  <% if @gist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@gist.errors.count, "error") %> prohibited this gist from being saved:</h2>

      <ul>
      <% @gist.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="input-group">
        <span class="input-group-addon">Snippet</span>
        <%= f.text_area :snippet, rows: 10, class: "form-control", placeholder: "Paste sample code here" %>
    </div>
  </div>
  
    <div class="form-group">
      <div class="input-group">
          <span class="input-group-addon">Description</span>
          <%= f.text_field :description, class: "form-control", placeholder: "Simple description of your gist" %>
      </div>
    </div>
 
    <div class="form-group">
      <div class="input-group col-sm-2">
          <span class="input-group-addon">Language</span>
          <%= f.select :lang, Pygments.lexers.keys.sort.map! {|l| l.downcase.strip}, {}, class: "form-control" %>
      </div>
    </div>
    
    <div class="form-group">
        <div class="btn-group btn-group-lg">
            <%= f.submit "Create", class: "btn btn-success" %>
            <%= link_to 'Back', gists_path, class: 'btn btn-danger' %>
        </div>
    </div>
  </div>
<% end %>
